<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="card text-center mt-2" style="width: 400px;">
    <div class="card-header h5 text-white bg-primary">Forgot your password?</div>
    <div class="card-body px-5">
      <p class="card-text py-2">
          Enter your email address and we'll send you an email with instructions to reset your password.
      </p>
      <div class="form-outline">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control my-3' %>
      </div>
      <%= f.submit "Reset Password", class: 'btn btn-primary w-100' %>
      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-primary' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
<% end %>
